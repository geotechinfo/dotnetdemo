@page
@model ClientRegistration.Pages.Clients.IndexModel
@{
}
<br>
<h2> List of Clients</h2>
<a class='btn btn-primary btn-sm' href='~/Clients/Create'>New Clients</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Gender</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var item in Model.clientList)
        {
            <tr>
                <td>@item.name</td>
                <td>@item.age</td>
                <td>@item.gender</td>
                <td>
                    <a class='btn btn-primary btn-sm' href='/Clients/Edit?id=@item.id'>Edit</a>
                    <a class='btn btn-danger btn-sm' href='/Clients/Delete?id=@item.id'>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
